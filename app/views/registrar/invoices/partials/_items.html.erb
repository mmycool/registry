<h4><%= t(:items) %></h4>
<hr/>
<div class="table-responsive">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th class="col-xs-4"><%= InvoiceItem.human_attribute_name :description %></th>
                <th class="col-xs-2"><%= InvoiceItem.human_attribute_name :unit %></th>
                <th class="col-xs-2"><%= InvoiceItem.human_attribute_name :quantity %></th>
                <th class="col-xs-2"><%= InvoiceItem.human_attribute_name :price %></th>
                <th class="col-xs-2"><%= InvoiceItem.human_attribute_name :total %></th>
            </tr>
        </thead>

        <tbody>
            <% @invoice.each do |invoice_item| %>
                <tr>
                    <td><%= invoice_item.description %></td>
                    <td><%= invoice_item.unit %></td>
                    <td><%= invoice_item.quantity %></td>
                    <td><%= currency(invoice_item.price) %></td>
                    <td><%= currency(invoice_item.amount) %></td>
                </tr>
            <% end %>
        </tbody>

        <tfoot class="totals">
            <tr>
                <th colspan="3"></th>
                <th>
                    <%= Invoice.human_attribute_name :subtotal %>
                </th>
                <td>
                    <%= number_to_currency @invoice.subtotal %>
                </td>
            </tr>

            <% unless @invoice.vat_rate.no_vat? %>
                <tr>
                    <th class="no-border" colspan="3"></th>
                    <th><%= "VAT #{@invoice.vat_rate.format}" %></th>
                    <td><%= number_to_currency @invoice.vat_amount %></td>
                </tr>
            <% end %>

            <tr>
                <th class="no-border" colspan="3"></th>
                <th><%= Invoice.human_attribute_name :total %></th>
                <td><%= number_to_currency @invoice.total %></td>
            </tr>
        </tfoot>
    </table>
</div>
